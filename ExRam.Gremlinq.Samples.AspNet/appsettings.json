{
  "Gremlinq": {
    // Optional. Non-provider-specific authentication. Can be overridden in provider sections.
    "Authentication": {
      "Username": "bob",
      "Password": "hello123"
    },
    "ConnectionPool": { // optional
      "MaxInProcessPerConnection": 32, // optional default value
      "PoolSize": 4 // optional, default value
    },
    "Alias": "g", // optional, default value
    "CosmosDb": {
      "Uri": "wss://your_cosmosdb-endpoint.gremlin.cosmos.azure.com:443/",
      "Database": "db",
      "Graph": "collection",
      "AuthKey": "yourAuthKey"
    },
    "GremlinServer": {
      "Uri": "ws://localhost:8182",
      "Authentication": {
        "Username": "bob",
        "Password": "hello123"
      }
    },
    "JanusGraph": {
      "Uri": "ws://localhost:8182"
    },
    "Neptune": {
      "Uri": "wss://your_neptune-endpoint:8182",
      "ElasticSearch": {  //optional
        "Enabled": false,
        "EndPoint": "https://your-elasticsearch-endpoint.com",
        "IndexConfiguration": "your-index-name"
      }
    },
    "QueryLogging": {
      "Verbosity": "QueryOnly",
      "LogLevel": "Trace",
      "Formatting": "Indented",
      "GroovyFormatting": "AllowInlining"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
